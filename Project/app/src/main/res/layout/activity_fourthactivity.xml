<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEE8F1"
    android:orientation="vertical"
    tools:context=".fourthactivity">

  <TextView
      android:id="@+id/textView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_marginTop="78dp"
      android:gravity="center"
      android:text="اختر النشاط"
      android:textColor="#000000"
      android:textSize="24sp"
      android:textStyle="bold" />

  <ImageView
      android:id="@+id/imageViewTP"
      android:layout_width="187dp"
      android:layout_height="147dp"
      android:layout_below="@+id/textView"
      android:layout_alignParentStart="true"
      android:layout_marginStart="113dp"
      android:layout_marginTop="46dp"
      android:foregroundGravity="center_vertical|center_horizontal"
      app:srcCompat="@drawable/ml" />

  <ImageView
      android:id="@+id/imageViewMALL"
      android:layout_width="164dp"
      android:layout_height="137dp"
      android:layout_below="@+id/imageViewTP"
      android:layout_alignParentStart="true"
      android:layout_marginStart="112dp"
      android:layout_marginTop="82dp"
      app:srcCompat="@drawable/shopping" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/imageViewTP"
      android:layout_alignParentStart="true"
      android:layout_marginStart="155dp"
      android:layout_marginTop="22dp"
      android:gravity="center"
      android:text="اماكن سياحية"
      android:textColor="#000000"
      android:textSize="20sp"
      android:textStyle="bold" />

  <TextView
      android:id="@+id/textView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_marginStart="166dp"
      android:layout_marginTop="530dp"
      android:gravity="center"
      android:text="مراكز تسوق"
      android:textColor="#020202"
      android:textSize="20sp"
      android:textStyle="bold" />

</RelativeLayout>